<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<table class="product--table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Image url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td class="product_column"><%= product.name %></td>
        <td class="product_column"><%= product.description %></td>
        <td class="product_column"><%= product.image_url %></td>
        <td>
        <div class="btn-group btn-group-xs btn-group-tools">
          <%= link_to 'Show', product, :class => "btn btn-default" %>
          <%= link_to 'Edit', edit_product_path(product), :class => "btn btn-default" %>
          <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-default" %>
        </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="new_product_button">
<%= link_to 'New Product', new_product_path, :class => "btn btn-default product_button" %>
</div>
