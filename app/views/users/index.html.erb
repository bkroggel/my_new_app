<p id="notice"><%= notice %></p>

<div class="width_frame">
  <h1>Listing Users</h1>

  <table class="product--table">
    <thead>
      <tr>
        <th class="product_column">First name</th>
        <th class="product_column">Last name</th>
        <th class="product_column">eMail</th>
        <th class="product_column">Last Signed in</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td class="product_column"><%= user.first_name %></td>
          <td class="product_column"><%= user.last_name %></td>
          <td class="product_column"><%= user.email %></td>
          <td class="product_column"><%= user.last_sign_in_at %></td>

          <td>
            <div class="btn-group btn-group-tools">
              <%= link_to 'Show', user, :class => "btn btn-default" %>
              <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <span class="caret"></span>
                <span class="sr-only">Toggle Dropdown</span>
              </button>
              <ul class="dropdown-menu">
                <li><%= link_to 'Show', user %></li>
                <li><%= link_to 'Edit', edit_user_path(user) %></li>
                <li><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></li>
              </ul>
            </div>
          </td>

        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New User', new_user_path, class: "btn btn-default" %>

</div>